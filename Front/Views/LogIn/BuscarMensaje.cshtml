
@{
    ViewData["Title"] = "BuscarMensaje";
}

<h1>BuscarMensaje</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="LogIn" asp-action="BuscarMensaje2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> Ingrese la palabra clave a buscar</label>
                <input class="form-control" name="Llave"  type = "text" required />
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
